<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="doghavenCapstone.PreventerPage.ForgotPasswordOTPPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Please enter the code sent to your mobile number: " />
                <Entry Placeholder="Code"
                   x:Name="txtCode"/>
                <Button Text="Confirm"
                    x:Name="btnConfirm"
                    Clicked="btnConfirm_Clicked_1"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>