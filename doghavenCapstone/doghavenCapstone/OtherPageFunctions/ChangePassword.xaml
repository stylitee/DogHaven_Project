<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="doghavenCapstone.OtherPageFunctions.ChangePassword">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" 
                         HorizontalOptions="CenterAndExpand">
                <Entry Placeholder="Old Password"
                        x:Name="txtOldPassword"
                        IsPassword="True"
                        TextColor="Black"/>
                <Entry Placeholder="New Password"
                        x:Name="txtNewPassword"
                        IsPassword="True"
                        TextColor="Black"/>
                <Entry Placeholder="Confirm Password"
                        x:Name="txtConfirmPassword"
                        IsPassword="True"
                        TextColor="Black"/>
                <Button Text="Confirm"
                        x:Name="btnConfirm"
                        Clicked="btnConfirm_Clicked_1"
                        TextColor="Black"/>
                <Button Text="Cancel"
                        x:Name="btnCancel"
                        Clicked="btnCancel_Clicked"
                        TextColor="Black"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>