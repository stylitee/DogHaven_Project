<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="doghavenCapstone.OtherPageFunctions.DogInformationPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="Red">
                <Frame Margin="20,20"
                       CornerRadius="10">
                    <StackLayout>
                        <Image x:Name="imgDogImage"
                               BackgroundColor="White"
                               Aspect="AspectFill"
                               HeightRequest="300"/>
                        <Label Text="Name of the dog"
                               x:Name="lblNameOfTheDog"/>
                    </StackLayout>
                </Frame>
                <Label Text="Owned by: "
                       TextColor="Black"
                       FontSize="Large"
                       Margin="30,0"
                       x:Name="lblOwner"/>
                <Label Text="Other Dogs owned" 
                       Margin="30,0"/>
                <StackLayout Orientation="Horizontal"
                             Margin="20,20"
                             x:Name="stckDogImages">
                    <CarouselView ItemsSource="{Binding DogList}" 
                                  HeightRequest="100"
                                  WidthRequest="300">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image HeightRequest="100" 
                                       Source="{Binding dogImage}"/>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>