<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="doghavenCapstone.InitialPages.OTPPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please enter your one time password send to your mobile number: " />
            <Entry Placeholder="OTP Number"
                   x:Name="txtOTP"/>
            <Button Text="Confirm"
                    x:Name="btnConfirm"
                    Clicked="btnConfirm_Clicked"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>