<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="doghavenCapstone.InitialPages.TermsAndConditionPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <ScrollView>
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Terms and Condition"
                            FontAttributes="Bold"
                           TextColor="Black"/>
                    <Label Text="Terms and Condition"
                             x:Name="lblTerms"
                           TextColor="Black"/>
                </StackLayout>
            </ScrollView>
            <Button Text="Accept and Continue"
                    x:Name="btnAccept"
                    Clicked="btnAccept_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>